@model EmployeeCRUD.Models.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this department?</h3>
<p>This action cannot be undone and may result in the loss of associated employees.</p>
<div class="border p-3 mb-3">
    <h4>Department Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" aria-label="Delete Department" /> 
        <a asp-action="Index" class="btn btn-secondary" aria-label="Back to Department List">Back to List</a>
    </form>
</div>
