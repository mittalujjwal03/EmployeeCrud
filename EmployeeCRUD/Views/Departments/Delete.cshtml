@model EmployeeCRUD.Models.Department

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Delete Department</h1>

<h3>Are you sure you want to delete this department?</h3>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">Department Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DepartmentName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DepartmentName)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="DepartmentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </form>
    </div>
</div>
