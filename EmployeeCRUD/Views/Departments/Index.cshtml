@model IEnumerable<EmployeeCRUD.Models.Department>
@{
    ViewData["Title"] = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Departments</h1>

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Manage Departments</h5>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Department
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    No departments available. Please create a new department.
                </div>
            }
            else
            {
                <table id="departmentTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                    <thead>
                        <tr>
                            <th>Department Name</th>
                            <th>Number of Employees</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                                <td>
                                    @(item.Employees?.Count ?? 0)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.DepartmentId"
                                           class="btn btn-primary btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.DepartmentId"
                                           class="btn btn-info btn-sm ms-2 me-2" title="Details">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.DepartmentId"
                                           class="btn btn-danger btn-sm delete-department"
                                           data-department-name="@item.DepartmentName"
                                           title="Delete">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#departmentTable').DataTable({
                responsive: true,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'copy',
                        className: 'btn btn-secondary me-2'
                    },
                    {
                        extend: 'excel',
                        className: 'btn btn-secondary'
                    },
                    {
                        extend: 'pdf',
                        className: 'btn btn-secondary'
                    },
                    {
                        extend: 'print',
                        className: 'btn btn-secondary'
                    }
                ],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search departments...",
                    emptyTable: "No departments available",
                    zeroRecords: "No matching departments found"
                },
                order: [[0, 'asc']],
                columnDefs: [
                    {
                        targets: -1, 
                        orderable: false,
                        searchable: false,
                        width: '200px'
                    }
                ],
                pageLength: 10,
                lengthMenu: [[5, 10, 25, 50], [5, 10, 25, 50, "All"]]
            });

            
            $(document).on('click', '.delete-department', function (e) {
                e.preventDefault();
                var link = $(this);
                var departmentName = link.data('department-name');

                if (confirm(`Are you sure you want to delete the department "${departmentName}"? This action cannot be undone.`)) {
                    window.location.href = link.attr('href');
                }
            });

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                        $(document).ready(function() {
                            toastr.success('@TempData["SuccessMessage"]');
                                });
            </text>
        }
                });
    </script>
}